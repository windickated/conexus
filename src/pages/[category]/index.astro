---
import Layout from "../../layouts/Layout.astro";
import TilesCollection from "../../components/TilesCollection.svelte";
import stories from "../../data/stories";

export function getStaticPaths() {
  return stories.map(
    ({ category, section, title, subheading, bigCollection, filters }) => {
      return {
        params: { category },
        props: { section, title, subheading, bigCollection, filters },
      };
    }
  );
}

const { section, title, subheading, bigCollection, filters } = Astro.props;
const arrow = true;
---

<Layout {title} header={section} {subheading} {arrow}>
  <TilesCollection
    sectionName={section}
    {bigCollection}
    {filters}
    client:load
  />
</Layout>
